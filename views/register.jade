extends layout

block content
	.container
		h1 Register Page
	
		br
		form(role='form', action="/register",method="post", style='max-width: 300px;')
			.form-group
					input.form-control(type='text', name="username", placeholder='Enter Username' required="true")
			.form-group
					input.form-control(type='email', name="mail", placeholder='Enter mail' required="true")
			.form-group
					input.form-control(type='password', name="password", placeholder='Password' required="true")
			button.btn.btn-default(type='submit') Submit
			&nbsp;
			a(href='/')
				button.btn.btn-primary(type="button") Cancel
		br
		h4= info